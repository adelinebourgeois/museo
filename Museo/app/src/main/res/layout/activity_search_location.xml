<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anaiskhaldi.museo.ui.location.SearchLocationActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextPlaces"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextPlaces"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#004283"
        android:textColor="@android:color/white"
        android:onClick="placeLocate"
        android:text="Go" />

    <EditText
        android:id="@+id/editTextPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="Entrez un lieux"
        android:textColor="#004283"
        android:layout_toLeftOf="@+id/submitButton">
    </EditText>

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_below="@+id/submitButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--android:layout_alignTop="@+id/map"-->

</RelativeLayout>